<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_gradient"
    tools:context=".MainMenuActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro_semibold"
        android:text=" CHOOSE YOUR GAMEMODE "
        android:textColor="@color/glow_teal"
        android:textSize="32sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <Button
                    android:id="@+id/btn_classic"
                    android:layout_width="185dp"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/optimizer_piece"
                    android:onClick="classic"
                    android:padding="10dp"
                    android:textColor="@color/glow_teal"
                    android:text="CLASSIC"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp" />

                <Button
                    android:id="@+id/btn_infmode"
                    android:layout_width="185dp"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/yellow"
                    android:onClick="infmode"
                    android:padding="10dp"
                    android:text="INFINITE"
                    android:textColor="@color/blue"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btn_timeTrial"
                    android:layout_width="185dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#0040FF"
                    android:enabled="true"
                    android:onClick="timeTrial"
                    android:padding="10dp"
                    android:text="Time Trials"
                    android:textColor="#00D515"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btn_maze"
                    android:layout_width="185dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#01E855"
                    android:onClick="speedMaze"
                    android:padding="10dp"
                    android:text="SPEED MAZE"
                    android:textColor="#0066FF"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp" />

                <Button
                    android:id="@+id/btn_noMaze"
                    android:layout_width="185dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#00D3E6"
                    android:onClick="noMaze"
                    android:padding="10dp"
                    android:text="NO MAZE"
                    android:textColor="#FF006F"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btn_glitch"
                    android:layout_width="185dp"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/glitch_block"
                    android:onClick="glitchSpread"
                    android:padding="10dp"
                    android:text="GLITCH"
                    android:textColor="@color/cyan"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <Button
                    android:id="@+id/btn_stages"
                    android:layout_width="185dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#26007C"
                    android:onClick="stages"
                    android:padding="10dp"
                    android:text="3 STAGES"
                    android:textColor="@color/red"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp" />

                <Button
                    android:id="@+id/btn_speed"
                    android:layout_width="185dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#2B0009"
                    android:onClick="apocalypse"
                    android:padding="10dp"
                    android:text="APOCALYPSE"
                    android:textColor="@color/red"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp" />

                <Button
                    android:id="@+id/btn_corruption"
                    android:layout_width="185dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#370003"
                    android:onClick="corruption"
                    android:padding="10dp"
                    android:text="Corruption"
                    android:textColor="#D900FF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp" />

                <Button
                    android:id="@+id/btn_suddendeath"
                    android:layout_width="185dp"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/red"
                    android:onClick="suddenDeath"
                    android:padding="10dp"
                    android:text="SUDDEN DEATH"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp" />

                <Button
                    android:id="@+id/btn_painmode"
                    android:layout_width="185dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#1B0000"
                    android:onClick="painMode"
                    android:padding="10dp"
                    android:text="PAIN MODE"
                    android:textColor="#CBFFFFFF"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp" />

                <Button
                    android:id="@+id/btn_comingsoon2"
                    android:layout_width="185dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#46474A"
                    android:enabled="false"
                    android:padding="10dp"
                    android:text="COMING SOON"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_storymode"
            android:layout_width="220dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:alpha="0.75"
            android:backgroundTint="#606277"
            android:enabled="false"
            android:onClick="story"
            android:padding="10dp"
            android:text="STORY MODE"
            android:textSize="24sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(Coming Soon)"
            android:textColor="#777777"
            android:textSize="16dp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <ImageView
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_baseline_android_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu" />


    <ImageButton
        android:id="@+id/settingsBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="settings"
        android:onClick="settings"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".999"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004"
        app:srcCompat="@drawable/ic_baseline_settings_suggest_24" />

    <ImageButton
        android:id="@+id/aboutBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="How to play"
        android:onClick="about"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"
        app:srcCompat="@drawable/ic_baseline_info_24" />

</androidx.constraintlayout.widget.ConstraintLayout>

<!-- Classic - original normal game rules -->
    <!-- Speedrun - every second, error block code (minus add issues part; AND green tiles have a chance of turning to orange when chosen) plays.  so the player has to beat the round before the board becomes full of dangers -->
    <!-- Speed Maze - No fixes or optimizers, but every unsafe tile is an instant game over. After 15 seconds or so, glitch tiles start appearing. -->
    <!-- Glitch - Instead of collecting optimizers, the player spreads the glitch. Their score is the number of glitch tiles on the board when they loose. -->
    <!-- God Mode - original game rules but the player can never die. -->